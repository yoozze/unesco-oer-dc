{#
/**
 * @file
 * Theme override to present all user data.
 *
 * This template is used when viewing a registered user's page,
 * e.g., example.com/user/123. 123 being the user's ID.
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 *   print a subset such as 'content.field_example'. Fields attached to a user
 *   such as 'user_picture' are available as 'content.user_picture'.
 * - attributes: HTML attributes for the container element.
 * - user: A Drupal User entity.
 *
 * @see template_preprocess_user()
 */
#}
<article{{attributes.addClass(['c-article', 'c-article--headless', 'c-article--user'])}}>
    <div class="c-article__body">
        <div class="o-container">
            <div class="c-article__content">
                <div class="c-avatar c-avatar--lg o-flex--grow">
                    {% if elements.user_picture %}
                        <div class="c-avatar__image">
                            {{ elements.user_picture }}
                        </div>
                    {% endif %}
                    <div class="c-avatar__details">
                        <h1 class="c-avatar__name">{{ display_name }}</h1>
                        <dl class="c-avatar__meta c-data-list">
                            <div class="c-data-list__item">
                                <dt class="c-data-list__label" title="{{ 'Username'|t }}">
                                    <span>{{ svg_icon('person-filled', 'c-data-list__icon') }}</span>
                                    <span>{{ 'Username'|t }}</span>
                                </dt>
                                <dd class="c-data-list__value">
                                    <span>{{ user.label }}</span>
                                </dd>
                            </div>
                            <div class="c-data-list__item">
                                <dt class="c-data-list__label" title="{{ 'Role'|t }}">
                                    <span>{{ svg_icon('group', 'c-data-list__icon') }}</span>
                                    <span>{{ 'Role'|t }}</span>
                                </dt>
                                <dd class="c-data-list__value">
                                    {% for role in user.roles %}
                                        <span>{{ role.target_id }}</span>
                                        <span>{{ role.label }}</span>
                                    {% endfor %}
                                </dd>
                            </div>
                            <div class="c-data-list__item">
                                <dt class="c-data-list__label" title="{{ 'Last login'|t }}">
                                    <span>{{ svg_icon('update', 'c-data-list__icon') }}</span>
                                    <span>{{ 'Last login'|t }}</span>
                                </dt>
                                <dd class="c-data-list__value">
                                    <span>{{ user.login.value|date('j F Y, H:i') }}</span>
                                </dd>
                            </div>
                            {# <div class="c-data-list__item">
                                <dt class="c-data-list__label" title="{{ 'Member for'|t }}">
                                    <span>{{ svg_icon('verified-user', 'c-data-list__icon') }}</span>
                                    <span>{{ 'Member for'|t }}</span>
                                </dt>
                                <dd class="c-data-list__value">
                                    <span>{{ elements.member_for['#markup']|striptags }}</span>
                                </dd>
                            </div> #}
                            <div class="c-data-list__item">
                                <dt class="c-data-list__label" title="{{ 'Member since'|t }}">
                                    <span>{{ svg_icon('verified-user', 'c-data-list__icon') }}</span>
                                    <span>{{ 'Member since'|t }}</span>
                                </dt>
                                <dd class="c-data-list__value">
                                    <span>{{ user.created.value|date('j F Y, H:i') }}</span>
                                </dd>
                            </div>
                        </dl>
                        {% if (
                            elements.field_first_name[0] or
                            elements.field_last_name[0] or
                            elements.field_gender[0] or
                            elements.field_position[0] or
                            elements.field_institution[0] or
                            elements.field_institution_type[0] or
                            elements.field_country[0] or
                            elements.field_region[0]
                        ) %}
                            <div class="c-avatar__info">
                                {{ elements.field_first_name }}
                                {{ elements.field_last_name }}
                                {{ elements.field_gender }}
                                {{ elements.field_position }}
                                {{ elements.field_institution }}
                                {{ elements.field_institution_type }}
                                {{ elements.field_country }}
                                {{ elements.field_region }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# {{ dump() }} #}
</article>
