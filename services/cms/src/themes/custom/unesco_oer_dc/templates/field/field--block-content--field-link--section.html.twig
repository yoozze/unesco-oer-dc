{#
/**
 * @file
 * Theme override for a section link field.
  */
#}
<div class="c-section__links">
    {% for item in items %}
        {% set url = item.content['#url'] %}
        <a class="c-section__link c-button c-button--outlined" href="{{ url.external ? url.uri : url }}" target="{{ url.external ? '_blank' : '_self' }}">
            <span class="c-button__label">{{ item.content['#title'] }}</span>
            {{ svg_icon('arrow-right-alt', 'c-button__trailing-icon') }}
        </a>
    {% endfor %}
</div>
